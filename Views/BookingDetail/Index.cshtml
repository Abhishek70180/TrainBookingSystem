@model List<Trainbookingsystem.Models.BookingTicket>

@{
    ViewData["Title"] = "My Bookings";
}

<h1>My Bookings</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Train ID</th>
                <th>Passenger Name</th>
                <th>Passenger Email</th>
                <th>Number of Tickets</th>
                <th>Total Price</th>
                <th>Booking Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.TrainId</td>
                    <td>@booking.PassengerName</td>
                    <td>@booking.PassengerEmail</td>
                    <td>@booking.NumberOfTickets</td>
                    <td>@booking.TotalPrice.ToString("C2")</td>
                    <td>@booking.BookingTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <form asp-action="DeleteConfirmed" asp-route-id="@booking.BookingId" method="post" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}
